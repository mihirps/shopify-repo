{%- if section.settings.google_map_enable -%}
{%- if section.settings.google_map_code != '' -%}
<div class="map-area" id="section-{{ section.id }}">
  {{ section.settings.google_map_code }}
</div>
{%- else -%}
{%- include 'google-map' -%}
{%- endif -%}
{%- include 'section-style' -%}
