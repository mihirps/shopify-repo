{%- capture bg_image_class -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}bg-img lazyload{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
{%- capture sections_bg_image -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}data-bgset="{%- render 'responsive-bg-image', image: block.settings.section_bg_image -%}"{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%} 

<section class="about-us {{ bg_image_class }}" id="section-{{ section.id }}" data-section="AboutInfo" {{ sections_bg_image }}>
  <div class="container">
    <div class="row align-items-center {% if section.settings.image_position_right %}flex-row-reverse{% endif %}">
      <div class="col-lg-5">
        {%- if section.settings.about_image -%}
        <div class="about-thumb lazyload-wraper-position" style="padding-top:{{ 1 | divided_by: section.settings.about_image.aspect_ratio | times: 100}}%;">
          {%- render 'responsive-image' with image: section.settings.about_image, image_class: "lazyload-main-image" -%}
        </div>
        {%- else -%}
        <div class="about-thumb">
          <img class="lazyload" data-src="https://via.placeholder.com/445x500" alt="{{ section.settings.about_image.alt }}">
        </div>
        {%- endif -%}
      </div>
      <div class="col-lg-7">
        <div class="about-content">
          {%- if section.settings.title != '' -%}
          <h2 class="about-title">{{ section.settings.title }}</h2>
          {%- endif -%}
          {%- if section.settings.highlight_content != '' -%}
          <h5 class="about-sub-title">
            {{ section.settings.highlight_content }}
          </h5>
          {%- endif -%}
          {%- if section.settings.content_1 != '' -%}
          {{ section.settings.content_1 }}
          {%- endif -%}
          {%- if section.settings.content_2 != '' -%}
          {{ section.settings.content_2 }}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>
{%- if section.settings.section_color_enable -%}
<style>
  #section-{{ section.id }} .about-title {
    color: {{ section.settings.title_color }};
  }
  #section-{{ section.id }} .about-sub-title {
    color: {{ section.settings.sub_title_color }};
  }
  #section-{{ section.id }} .about-content p {
    color: {{ section.settings.content_color }};
  }
</style>
{%- endif -%}
